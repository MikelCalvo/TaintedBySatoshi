# Server Configuration
PORT=3001
FRONTEND_URL=http://localhost:1337
NODE_ENV=development

# Bitcoin Node Configuration
BITCOIN_RPC_HOST=localhost
BITCOIN_RPC_PORT=8332
BITCOIN_RPC_USER=your_rpc_username
BITCOIN_RPC_PASS=your_rpc_password
BITCOIN_RPC_TIMEOUT=60000

# Database Configuration
DB_PATH=./data/satoshi-transactions

# Processing Configuration
MAX_DEGREE=100
BATCH_SIZE=250

# Performance Tuning
BITCOIN_MAX_RETRIES=5
BITCOIN_MEMORY_THRESHOLD=0.90
BITCOIN_BLOCK_TIMEOUT=300000

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_DB_PATH=./data/analytics
ANALYTICS_BATCH_SIZE=100
ANALYTICS_FLUSH_INTERVAL=10000
ANALYTICS_RETENTION_DAYS=0  # 0 = infinite retention (keep data forever)